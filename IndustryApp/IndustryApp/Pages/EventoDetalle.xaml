<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IndustryApp.Pages.EventoDetalle"
             Title="IndustryApp" BackgroundColor="#E2E2E2">
  <StackLayout Margin="15">

    <Image x:Name="imgLogo" HorizontalOptions="Center"/>
    <Label x:Name="lblDescripcion" TextColor="#313A49" />
    <Label x:Name="lblDescripcion2" TextColor="#313A49" />

    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="50" />
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Image Source="icono_calendario.png" Grid.Row="0" Grid.Column="0"/>
      <Label x:Name="lblFecha" TextColor="#313A49" FontSize="12" Grid.Row="0" Grid.Column="1" VerticalOptions="Center" VerticalTextAlignment="Center"/>

      <Image Source="icono_browser.png" Grid.Row="1" Grid.Column="0"/>
      <Label  x:Name="lblURL" TextColor="#313A49" FontSize="12" Grid.Row="1" Grid.Column="1" VerticalOptions="Center" VerticalTextAlignment="Center"/>
    </Grid>
  </StackLayout>
</ContentPage>